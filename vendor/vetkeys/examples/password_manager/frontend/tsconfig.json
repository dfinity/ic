{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "ES2020",
      "lib": [
        "ES2020",
        "DOM",
        "DOM.Iterable"
      ],
      "skipLibCheck": true,
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "isolatedModules": true,
      "moduleDetection": "force",
      "noEmit": true,
      "noUncheckedSideEffectImports": true
    },
    "include": [
      "src"
    ]
  }
  