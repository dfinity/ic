load("@rules_rust//rust:defs.bzl", "rust_library")
load("//bazel:canisters.bzl", "rust_canister")

package(default_visibility = ["//visibility:public"])

DEPENDENCIES = [
    # Keep sorted
    "//packages/ic-error-types",
    "//rs/types/base_types",
    "//rs/types/types",
    "@crate_index//:candid",
    "@crate_index//:futures",
    "@crate_index//:ic_cdk_next",
    "@crate_index//:rand",
    "@crate_index//:serde",
    "@crate_index//:serde_bytes",
]

MACRO_DEPENDENCIES = [
    "@crate_index//:ic_cdk_macros_next",
]

rust_library(
    name = "random_traffic_test",
    srcs = ["src/lib.rs"],
    crate_name = "random_traffic_test",
    version = "0.1.0",
    deps = DEPENDENCIES,
)

rust_canister(
    name = "random-traffic-test-canister",
    srcs = ["src/main.rs"],
    proc_macro_deps = MACRO_DEPENDENCIES,
    service_file = ":random-traffic-canister.did",
    deps = DEPENDENCIES + [":random_traffic_test"],
)
