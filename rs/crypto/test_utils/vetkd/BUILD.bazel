rust_test_suite(
    name = "vetkd_tests",
    srcs = glob(["tests/**/*.rs"]),
    deps = [
        ":vetkd",
        "//rs/crypto/internal/crypto_lib/bls12_381/type",
        "//rs/crypto/internal/crypto_lib/bls12_381/vetkd",
        "@crate_index//:ic-vetkeys",
