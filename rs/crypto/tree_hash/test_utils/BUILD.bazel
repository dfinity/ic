load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test_suite")
load("//bazel:fuzz_testing.bzl", "DEFAULT_RUSTC_FLAGS_FOR_FUZZING")

package(default_visibility = ["//visibility:public"])

DEPENDENCIES = [
    # Keep sorted.
    "//rs/crypto/tree_hash",
    "@crate_index//:assert_matches",
    "@crate_index//:proptest",
    "@crate_index//:rand",
    "@crate_index//:thiserror",
]

DEV_DEPENDENCIES = [
    # Keep sorted.
    "//rs/crypto/test_utils/reproducible_rng",
]

rust_library(
    name = "test_utils",
    testonly = True,
    srcs = glob(["src/**"]),
    crate_name = "ic_crypto_tree_hash_test_utils",
    rustc_flags = select({
        "//bazel:fuzzing_code_enabled": DEFAULT_RUSTC_FLAGS_FOR_FUZZING,
        "//conditions:default": [],
    }),
    version = "0.9.0",
    deps = DEPENDENCIES,
)

rust_test_suite(
    name = "test_utils_integration",
    srcs = glob(["tests/**"]),
    edition = "2021",
    deps = DEPENDENCIES + DEV_DEPENDENCIES + [":test_utils"],
)
