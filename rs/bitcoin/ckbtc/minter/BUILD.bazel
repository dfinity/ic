    "//rs/bitcoin/ckbtc/minter:tla_disabled": [],
    "//conditions:default": ["//rs/tla_instrumentation:proc_macros"],
})

[
    rust_library(
        name = name,
        srcs = glob(
            ["src/**"],
            exclude = ["src/main.rs"],
        ),
        crate_features = features,
        crate_name = "ic_ckbtc_minter",
        proc_macro_deps = LIB_PROC_MACRO_DEPS + extra_proc_macro_deps,
        version = "0.1.0",
        deps = LIB_DEPS + extra_deps,
    )
    for (name, features, extra_proc_macro_deps, extra_deps) in [
        (
            "ckbtc_minter_lib",
            [],
            [],
            [],
        ),
        (
            "ckbtc_minter_lib-tla",
            test_with_tla(),
            TLA_PROC_MACRO_DEPS,
            TLA_DEPS,
        ),
        (
            "ckbtc_minter_lib-canbench",
            ["canbench-rs"],
            [],
            ["@crate_index//:canbench-rs"],
        ),
    ]
]

LIB_DEP_WITH_CONDITIONAL_TLA = select({
    "//rs/bitcoin/ckbtc/minter:tla_disabled": [":ckbtc_minter_lib"],
    "//conditions:default": [":ckbtc_minter_lib-tla"],
})

