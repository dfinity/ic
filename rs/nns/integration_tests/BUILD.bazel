    name = "governance_mem_test",
    size = "large",
    srcs = [
        "src/governance_mem_test.rs",
        "src/lib.rs",
    ],
    aliases = ALIASES,
    crate_root = "src/governance_mem_test.rs",
    data = DEV_DATA,
    env = DEV_ENV,
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    tags = ["post_master"],
    deps = DEPENDENCIES + DEV_DEPENDENCIES,
