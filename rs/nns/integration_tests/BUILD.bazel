    name = "integration_tests_test",
    srcs = glob(
        ["src/**/*.rs"],
        exclude = [
            "src/lib.rs",
            # governance mem test is tested in a separate rule below, it needs 5+ minutes to finish.
            "src/governance_mem_test.rs",
