load("//rs/tests:common.bzl", "COUNTER_CANISTER_RUNTIME_DEPS", "GUESTOS_RUNTIME_DEPS", "MACRO_DEPENDENCIES", "MAINNET_REVISION_RUNTIME_DEPS", "UNIVERSAL_VM_RUNTIME_DEPS", "XNET_TEST_CANISTER_RUNTIME_DEPS", "MAINNET_NNS_CANISTER_RUNTIME_DEPS", "MAINNET_NNS_CANISTER_ENV")
load("//rs/tests:system_tests.bzl", "system_test")
load("@rules_rust//rust:defs.bzl", "rust_library")

package(default_visibility = ["//rs:system-tests-pkg"])

DEPS = [
    "//rs/tests",
    "//rs/tests/driver:ic-system-test-driver",
    "//rs/protobuf",
    "//rs/tests/consensus/utils",
    "//rs/registry/subnet_type",
    "//rs/canister_client",
    "//rs/nervous_system/common/test_keys",
    "//rs/nns/common",
    "//rs/types/types",
    "@crate_index//:tokio",
    "@crate_index//:serde",
    "@crate_index//:slog",
    "@crate_index//:url",
    "@crate_index//:itertools",
    "@crate_index//:futures",
    "@crate_index//:anyhow",
    "@crate_index//:reqwest",
]

system_test(
    name = "guest_os_qualification",
    env = {
        "XNET_TEST_CANISTER_WASM_PATH": "$(rootpath //rs/rust_canisters/xnet_test:xnet-test-canister)",
    } | MAINNET_NNS_CANISTER_ENV,
    proc_macro_deps = MACRO_DEPENDENCIES,
    tags = [
        "manual",
    ],
    target_compatible_with = ["@platforms//os:linux"],  # requires libssh that does not build on Mac OS
    uses_guestos_dev_test = True,
    runtime_deps =
        GUESTOS_RUNTIME_DEPS +
        UNIVERSAL_VM_RUNTIME_DEPS +
        MAINNET_REVISION_RUNTIME_DEPS +
        MAINNET_NNS_CANISTER_RUNTIME_DEPS +
        COUNTER_CANISTER_RUNTIME_DEPS +
        XNET_TEST_CANISTER_RUNTIME_DEPS,
    deps = DEPS + [":os_qualification_utils"],
)

rust_library(
    name = "os_qualification_utils",
    testonly = True,
    srcs = glob(["utils/**/*.rs"]),
    crate_name = "os_qualification_utils",
    target_compatible_with = ["@platforms//os:linux"],  # requires libssh that does not build on Mac OS
    proc_macro_deps = MACRO_DEPENDENCIES,
    deps = DEPS,
)
