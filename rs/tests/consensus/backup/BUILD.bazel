    name = "common",
    testonly = True,
    srcs = ["common.rs"],
    crate_name = "ic_consensus_system_test_backup_common",
    deps = [
        # Keep sorted.
        "//rs/backup",
        "//rs/registry/subnet_features",
        "//rs/registry/subnet_type",
        "//rs/tests/consensus/tecdsa/utils",
        "//rs/tests/consensus/utils",
