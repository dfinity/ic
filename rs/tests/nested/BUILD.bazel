load("@rules_rust//rust:defs.bzl", "rust_binary", "rust_library")
load("//rs/tests:common.bzl", "IC_GATEWAY_RUNTIME_DEPS", "MAINNET_ENV")
load("//rs/tests:system_tests.bzl", "system_test_nns")

package(default_visibility = ["//rs:system-tests-pkg"])

rust_library(
    name = "nested",
    testonly = True,
    srcs = glob(["src/**/*.rs"]),
    crate_name = "nested",
    target_compatible_with = ["@platforms//os:linux"],  # requires libssh that does not build on Mac OS
    deps = [
        # Keep sorted.
        "//rs/canister_client",
        "//rs/ic_os/dev_test_tools/bare_metal_deployment",
        "//rs/nervous_system/common/test_keys",
        "//rs/nns/common",
        "//rs/protobuf",
        "//rs/registry/keys",
        "//rs/registry/nns_data_provider",
        "//rs/registry/subnet_type",
        "//rs/registry/transport",
        "//rs/rust_canisters/canister_test",
        "//rs/tests/consensus/utils",
        "//rs/tests/driver:ic-system-test-driver",
        "//rs/types/types",
        "@crate_index//:anyhow",
        "@crate_index//:nix",
        "@crate_index//:prost",
        "@crate_index//:regex",
        "@crate_index//:reqwest",
        "@crate_index//:serde",
        "@crate_index//:slog",
    ],
)

genrule(
    name = "empty-disk-img-tar-zst",
    outs = ["empty-disk-img.tar.zst"],
    cmd = """
        truncate -s 101G disk.img
        tar --zstd -Scf $@ disk.img
    """,
    tags = ["manual"],
    target_compatible_with = ["@platforms//os:linux"],
    visibility = ["//visibility:public"],
)

system_test_nns(
    name = "registration",
    env = MAINNET_ENV,
    setupos = True,
    tags = ["long_test"],  # since it takes longer than 5 minutes.
    test_timeout = "eternal",
    runtime_deps = IC_GATEWAY_RUNTIME_DEPS,
    deps = [
        # Keep sorted.
        ":nested",
        "//rs/tests/driver:ic-system-test-driver",
        "@crate_index//:anyhow",
    ],
)

rust_binary(
    name = "guestos_upgrade_test_bin",
    testonly = True,
    srcs = ["guestos_upgrade.rs"],
    deps = [
        # Keep sorted.
        ":nested",
        "//rs/registry/nns_data_provider",
        "//rs/tests/driver:ic-system-test-driver",
        "@crate_index//:anyhow",
        "@crate_index//:reqwest",
        "@crate_index//:slog",
    ],
)

# Tests if current commit is "upgradeable" and can be used as an upgrade image
system_test_nns(
    name = "guestos_upgrade_smoke_test",
    env = MAINNET_ENV,
    guestos_update = "test",
    setupos = True,
    tags = ["long_test"],
    test_driver_target = ":guestos_upgrade_test_bin",
    test_timeout = "eternal",
    runtime_deps = IC_GATEWAY_RUNTIME_DEPS,
)

# Tests if "latest_release" in mainnet-icos-revisions.json can successfully guestos upgrade to current commit
system_test_nns(
    name = "guestos_upgrade_from_latest_release_to_current",
    guestos = "mainnet_latest_dev",  # necessary for configuring NNS public key
    guestos_update = True,
    setupos = "mainnet_latest_dev",
    tags = ["long_test"],
    test_driver_target = ":guestos_upgrade_test_bin",
    test_timeout = "eternal",
    runtime_deps = IC_GATEWAY_RUNTIME_DEPS | {
        "NODE_OPERATOR_PRIV_KEY_PATH": "//ic-os/setupos:config/node_operator_private_key.pem",
    },
)

# Tests if "latest_release" in mainnet-icos-revisions.json can successfully guestos upgrade to current commit
# on SEV-enabled nodes
# This test requires manually injecting the baremetal configuration
# ict test //rs/tests/nested:guestos_upgrade_from_latest_release_to_current_sev -- --test_env=BARE_METAL_HOST_SECRETS="$(realpath zh2-dll01.ini)"
# zh2-dll01.ini can be retrieved from our 1password
system_test_nns(
    name = "guestos_upgrade_from_latest_release_to_current_sev",
    env = MAINNET_ENV | {"TRUSTED_EXECUTION_ENVIRONMENT": "true"},
    guestos = "mainnet_latest_dev",  # necessary for configuring NNS public key
    guestos_update = True,
    hostos = "mainnet_latest_dev",
    tags = [
        "long_test",
        "manual",
    ],
    test_driver_target = ":guestos_upgrade_test_bin",
    test_timeout = "eternal",
    runtime_deps = IC_GATEWAY_RUNTIME_DEPS | {
        "NODE_OPERATOR_PRIV_KEY_PATH": "//ic-os/setupos:config/node_operator_private_key.pem",
    },
)

