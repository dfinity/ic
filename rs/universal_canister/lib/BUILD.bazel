load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")

package(default_visibility = ["//visibility:public"])

DEPENDENCIES = [
    # Keep sorted.
    "//rs/crypto/sha2",
    "//rs/types/types",
    "//rs/universal_canister/impl:lib",
    "@crate_index//:candid",
    "@crate_index//:serde",
]

DEV_DEPENDENCIES = [
    # Keep sorted.
    "//rs/types/types",
]

rust_library(
    name = "lib",
    srcs = glob(["src/*.rs"]),
    crate_name = "ic_universal_canister",
    data = ["//rs/universal_canister/impl:universal_canister.wasm.gz"],
    rustc_env = {
        "UNIVERSAL_CANISTER_WASM_PATH": "$(location //rs/universal_canister/impl:universal_canister.wasm.gz)",
    },
    version = "0.9.0",
    deps = DEPENDENCIES,
)

rust_test(
    name = "lib_test",
    crate = ":lib",
    data = ["//rs/universal_canister/impl:universal_canister.wasm.gz"],
    rustc_env = {
        "UNIVERSAL_CANISTER_WASM_PATH": "$(location //rs/universal_canister/impl:universal_canister.wasm.gz)",
    },
    deps = DEV_DEPENDENCIES,
)
