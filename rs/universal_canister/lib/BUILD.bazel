load("@rules_rust//cargo:defs.bzl", "cargo_build_script")
load("@rules_rust//rust:defs.bzl", "rust_doc_test", "rust_library", "rust_test")

package(default_visibility = ["//visibility:public"])

DEPENDENCIES = [
    # Keep sorted.
    ":build_script",
    "//rs/crypto/sha2",
    "//rs/types/types",
    "//rs/universal_canister/impl:lib",
    "@crate_index//:candid",
    "@crate_index//:serde",
]

DEV_DEPENDENCIES = [
    # Keep sorted.
    "//rs/types/types",
]

cargo_build_script(
    name = "build_script",
    srcs = ["build.rs"],
    build_script_env = {
        "UNIVERSAL_CANISTER_WASM_PATH": "$(location //rs/universal_canister/impl:universal_canister.wasm.gz)",
    },
    data = ["//rs/universal_canister/impl:universal_canister.wasm.gz"],
)

rust_library(
    name = "lib",
    srcs = glob(["src/*.rs"]),
    crate_name = "ic_universal_canister",
    version = "0.9.0",
    deps = DEPENDENCIES,
)

# Disabled, doc tests do not support data dependencies.
rust_doc_test(
    name = "lib_doc_test",
    crate = ":lib",
    deps = [
        # Keep sorted.
        "//rs/crypto/sha2",
        "//rs/types/types",
    ],
)

rust_test(
    name = "lib_test",
    crate = ":lib",
    data = ["//rs/universal_canister/impl:universal_canister.wasm.gz"],
    rustc_env = {
        "UNIVERSAL_CANISTER_WASM_PATH": "$(location //rs/universal_canister/impl:universal_canister.wasm.gz)",
    },
    deps = DEV_DEPENDENCIES,
)
