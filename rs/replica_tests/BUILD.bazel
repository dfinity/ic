load("@crate_index//:defs.bzl", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test", "rust_test_suite")

package(default_visibility = ["//visibility:public"])

DEPENDENCIES = all_crate_deps() + [
    "//rs/async_utils",
    "//rs/bitcoin/service",
    "//rs/bitcoin/types/internal",
    "//rs/canister_client/sender",
    "//rs/config",
    "//rs/crypto",
    "//rs/execution_environment",
    "//rs/interfaces",
    "//rs/interfaces/registry",
    "//rs/interfaces/state_manager",
    "//rs/monitoring/logger",
    "//rs/monitoring/metrics",
    "//rs/prep",
    "//rs/protobuf",
    "//rs/registry/fake",
    "//rs/registry/helpers",
    "//rs/registry/keys",
    "//rs/registry/proto_data_provider",
    "//rs/registry/provisional_whitelist",
    "//rs/registry/subnet_type",
    "//rs/replica:replica_lib",
    "//rs/replicated_state",
    "//rs/state_machine_tests",
    "//rs/state_manager",
    "//rs/test_utilities",
    "//rs/test_utilities/logger",
    "//rs/test_utilities/registry",
    "//rs/types/base_types",
    "//rs/types/error_types",
    "//rs/types/ic00_types",
    "//rs/types/types",
    "//rs/utils",
]

MACRO_DEPENDENCIES = []

DEV_DEPENDENCIES = [
    "//rs/crypto/sha2",
    "//rs/rust_canisters/canister_test",
    "//rs/sys",
    "@crate_index//:assert_matches",
    "@crate_index//:candid",
    "@crate_index//:maplit",
    "@crate_index//:predicates",
]

MACRO_DEV_DEPENDENCIES = []

DEV_DATA = [
    # Keep sorted.
    ":replica_tests",
    "//rs/canister_sandbox",
    "//rs/canister_sandbox/sandbox_launcher",
]

ALIASES = {}

DEV_ENV = {
    # Keep sorted.
    "LAUNCHER_BINARY": "$(rootpath //rs/canister_sandbox/sandbox_launcher)",
    "SANDBOX_BINARY": "$(rootpath //rs/canister_sandbox)",
}

rust_library(
    name = "replica_tests",
    srcs = glob(["src/**/*.rs"]),
    aliases = ALIASES,
    crate_name = "ic_replica_tests",
    edition = "2021",
    proc_macro_deps = MACRO_DEPENDENCIES,
    deps = DEPENDENCIES,
)

rust_test(
    name = "replica_tests_test",
    aliases = ALIASES,
    crate = ":replica_tests",
    edition = "2021",
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    deps = DEPENDENCIES + DEV_DEPENDENCIES,
)

rust_test_suite(
    name = "replica_tests_integration",
    timeout = "long",
    srcs = glob(["tests/**/*.rs"]),
    aliases = ALIASES,
    data = DEV_DATA,
    edition = "2021",
    env = DEV_ENV,
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
    deps = [":replica_tests"] + DEPENDENCIES + DEV_DEPENDENCIES,
)
