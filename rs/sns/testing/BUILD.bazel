}

rust_binary(
    name = "cli",
    testonly = True,
    srcs = ["src/main.rs"],
    data = DEV_DATA,
    env = DEV_ENV,
    deps = DEPENDENCIES + [
        ":sns_testing",
    ],
)

rust_library(
    name = "sns_testing",
    testonly = True,
    srcs = glob(["src/**/*.rs"]),
    crate_name = "ic_sns_testing",
    deps = DEPENDENCIES,
)

rust_test(
    name = "sns_testing_ci",
    srcs = ["tests/sns_testing_ci.rs"],
    data = DEV_DATA,
    env = DEV_ENV,
    deps = DEPENDENCIES + [
        ":sns_testing",
    ],
)

rust_canister(
    name = "sns_testing_canister",
    testonly = True,
    srcs = ["canister/canister.rs"],
    service_file = ":canister/test.did",
    deps = [
        "@crate_index//:candid",
        "@crate_index//:ic-cdk",
        "@crate_index//:serde",
    ],
)
