    rust_library(
        name = "pocket-ic-server-lib" + name_suffix,
        testonly = True,
        srcs = [
            "src/beta_features.rs",
            "src/external_canister_types.rs",
            "src/lib.rs",
            "src/pocket_ic.rs",
