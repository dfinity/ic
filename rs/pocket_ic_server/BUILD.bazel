        version = "10.0.0",
        deps = LIB_DEPENDENCIES + [":build_script"],
    )
    for (name_suffix, nns_canister_data, nns_canister_env) in [
        ("-head-nns", HEAD_NNS_CANISTER_DATA, HEAD_NNS_CANISTER_ENV),
        ("", MAINNET_NNS_CANISTER_DATA, MAINNET_NNS_CANISTER_ENV),
    ]
]

