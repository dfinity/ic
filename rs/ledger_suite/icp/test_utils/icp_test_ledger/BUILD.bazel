load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")
load("//bazel:canisters.bzl", "rust_canister")
load("//bazel:defs.bzl", "rust_ic_test_suite")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "icp_test_ledger",
    srcs = glob(["src/**/lib.rs"]),
    crate_name = "ic_icp_test_ledger",
    version = "0.1.0",
    deps = [
        # Keep sorted.
        "@crate_index//:candid",
        "@crate_index//:ic-cdk",
        "@crate_index//:serde",
    ],
)

rust_canister(
    name = "icp_test_ledger_canister",
    srcs = ["src/main.rs"],
    crate_name = "ic_icp_test_ledger_canister",
    opt = "z",
    service_file = ":icp_test_ledger.did",
    version = "0.9.0",
    deps = [
        # Keep sorted.
        ":icp_test_ledger",
        "//rs/ledger_suite/common/ledger_canister_core",
        "//rs/ledger_suite/common/ledger_core",
        "//rs/ledger_suite/icp:icp_ledger",
        "//rs/rust_canisters/dfn_protobuf",
        "@crate_index//:candid",
        "@crate_index//:ic-cdk",
        "@crate_index//:serde",
        "@crate_index//:serde_bytes",
    ],
)

rust_test(
    name = "icp_test_ledger_canister_test",
    crate = ":_wasm_icp_test_ledger_canister",
    data = [
        ":icp_test_ledger.did",
        "//rs/ledger_suite/icp:ledger.did",
    ],
    env = {
        "CARGO_MANIFEST_DIR": "rs/ledger_suite/icp/test_utils/icp_test_ledger",
    },
    deps = [
        "@crate_index//:candid_parser",
    ],
)

rust_ic_test_suite(
    name = "icp_test_ledger_integration_test",
    srcs = ["tests/tests.rs"],
    data = [
        ":icp_test_ledger_canister.wasm.gz",
        "//rs/ledger_suite/icp/index:ic-icp-index-canister.wasm.gz",
        "//rs/ledger_suite/icp/ledger:ledger-canister-wasm",
    ],
    env = {
        "CARGO_MANIFEST_DIR": "rs/ledger_suite/icp/test_utils/icp_test_ledger",
        "IC_ICP_LEDGER_WASM_PATH": "$(rootpath //rs/ledger_suite/icp/ledger:ledger-canister-wasm)",
        "IC_ICP_TEST_LEDGER_WASM_PATH": "$(rootpath :icp_test_ledger_canister.wasm.gz)",
        "IC_ICP_INDEX_WASM_PATH": "$(rootpath //rs/ledger_suite/icp/index:ic-icp-index-canister.wasm.gz)",
    },
    deps = [
        # Keep sorted.
        ":icp_test_ledger",
        "//packages/icrc-ledger-types:icrc_ledger_types",
        "//rs/ledger_suite/common/ledger_core",
        "//rs/ledger_suite/icp:icp_ledger",
        "//rs/ledger_suite/icp/index:ic-icp-index",
        "//rs/ledger_suite/test_utils/state_machine_helpers:ic-ledger-suite-state-machine-helpers",
        "//rs/ledger_suite/tests/sm-tests:ic-ledger-suite-state-machine-tests",
        "//rs/state_machine_tests",
        "//rs/test_utilities/load_wasm",
        "//rs/types/base_types",
        "@crate_index//:candid",
        "@crate_index//:serde_bytes",
    ],
)
