ALIASES = {}

rust_library(
    name = "replicated_state",
    srcs = glob(["src/**/*.rs"]),
    aliases = ALIASES,
    crate_features = select({
        "//bazel:fuzzing_code_enabled": ["fuzzing_code"],
        "//conditions:default": [],
    }),
    crate_name = "ic_replicated_state",
    proc_macro_deps = MACRO_DEPENDENCIES,
    version = "0.9.0",
    deps = DEPENDENCIES + select({
        "//bazel:fuzzing_code_enabled": [
