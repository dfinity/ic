    "@crate_index//:serde_derive",
]

DEV_DEPENDENCIES = []

MACRO_DEV_DEPENDENCIES = []

ALIASES = {}

rust_library(
    name = "config_writer_common",
    srcs = glob(["src/**/*.rs"]),
    aliases = ALIASES,
    crate_name = "config_writer_common",
    edition = "2021",
    proc_macro_deps = MACRO_DEPENDENCIES,
    deps = DEPENDENCIES,
