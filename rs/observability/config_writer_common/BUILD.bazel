rust_test(
    name = "config_writer_common_test",
    aliases = ALIASES,
    crate = ":config_writer_common",
    edition = "2021",
    proc_macro_deps = MACRO_DEPENDENCIES + MACRO_DEV_DEPENDENCIES,
