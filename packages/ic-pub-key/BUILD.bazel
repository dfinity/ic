load("@rules_rust//rust:defs.bzl", "rust_doc", "rust_library", "rust_test", "rust_test_suite")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "ic-pub-key",
    srcs = glob(["src/**/*.rs"]),
    crate_features = [
        "secp256k1",
        "ed25519",
        "vetkeys",
    ],
    crate_name = "ic_pub_key",
    version = "0.1.0",
    deps = [
        "//packages/ic-ed25519",
        "//packages/ic-secp256k1",
        "@crate_index//:ic-management-canister-types",
        "@crate_index//:ic-vetkeys",
    ],
)

# Once https://github.com/bazelbuild/rules_rust/pull/3544 is part of a release
# and we are using the respective rules_rust version, we can use the new
# crate_features rather than the rustdoc_flags.
rust_doc(
    name = "doc",
    crate = ":ic-pub-key",
    rustdoc_flags = [
        "--cfg=feature=\"secp256k1\"",
        "--cfg=feature=\"ed25519\"",
        "--cfg=feature=\"vetkeys\"",
    ],
)

