    name = "unit_tests",
    crate = ":ic-pub-key",
    crate_features = [
        "secp256k1",
        "ed25519",
        "vetkeys",
    ],
)

rust_test_suite(
    name = "integration_tests",
    srcs = glob(["tests/**/*.rs"]),
    crate_features = [
        "secp256k1",
        "ed25519",
        "vetkeys",
    ],
    deps = [
        ":ic-pub-key",
        "@crate_index//:hex",
    ],
)
