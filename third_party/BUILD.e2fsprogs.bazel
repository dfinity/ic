load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

configure_make(
    name = "e2fsprogs",
    args = ["-j12"],
    configure_options = [
        "--disable-nls",
        "--disable-fuse2fs",
        "--enable-libuuid",
        "--enable-libblkid",
        "--disable-elf-shlibs",
    ],
    env = {
        "LDFLAGS": "-static",
    },
    lib_name = "e2fsprogs",
    lib_source = ":all_srcs",
    out_binaries = [
        "mke2fs",
    ],
    postfix_script = """
        cp misc/mke2fs $INSTALLDIR/bin
    """,
    targets = [
        "progs",
    ],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "mke2fs",
    srcs = [":e2fsprogs"],
    output_group = "mke2fs",
    visibility = ["//visibility:public"],
)

