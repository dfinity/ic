<!--<domain type='{{ cpu_domain }}' id='1'>-->
<domain type='kvm' id='2'>
    <name>guestos-upgrader</name>
    <uuid>ab20bf21-b3af-4bb3-a5df-5cdad7453325</uuid>
    <metadata>
        <libosinfo:libosinfo xmlns:libosinfo="http://libosinfo.org/xmlns/libvirt/domain/1.0">
            <libosinfo:os id="http://ubuntu.com/ubuntu/20.04"/>
        </libosinfo:libosinfo>
    </metadata>
<!--    <memory unit='GiB'>{{ resources_memory }}</memory>-->
    <memory unit='GiB'>1</memory>
    <currentMemory unit='GiB'>1</currentMemory>
<!--    <currentMemory unit='GiB'>{{ resources_memory }}</currentMemory>-->
    <vcpu placement='static'>4</vcpu>
<!--    {{ cpu_spec }}-->
    <cpu mode='host-passthrough' migratable='off'>
        <cache mode='passthrough'/>
        <topology sockets='1' cores='1' threads='4'/>
        <feature policy="require" name="topoext"/>
    </cpu>
    <commandline xmlns="http://libvirt.org/schemas/domain/qemu/1.0">
        <arg value='-cpu'/>
        <arg value='EPYC-v4,topoext=on,l3-cache=off'/>
    </commandline>

    <resource>
        <partition>/machine</partition>
    </resource>

    <os type='efi'>
        <type arch='x86_64' machine='pc-q35-6.2'>hvm</type>
<!--        <loader readonly='yes' stateless='yes'>/usr/share/ovmf/OVMF.fd</loader>-->
        <loader readonly='yes' stateless='yes'>/usr/share/OVMF/OVMF_CODE_4M.fd</loader>

<nvram>/var/lib/libvirt/qemu/nvram/guestos-upgrader_VARS.fd</nvram>
            <kernel>/mnt/loop0p4/vmlinuz</kernel>
            <initrd>/mnt/loop0p4/initrd.img</initrd>
<!--            <cmdline>security=selinux selinux=1 enforcing=0 root_hash=373b8526c4956b18c9031228f14c62b54fef19e3d692412df93bf9faed018ed5</cmdline>-->
        <cmdline>security=selinux selinux=1 enforcing=0 root_hash=373b8526c4956b18c9031228f14c62b54fef19e3d692412df93bf9faed018ed5 nomodeset root=/dev/vda5 console=ttyS0 dfinity.system=A dfinity.boot_state=stable mem_encrypt=on kvm_amd.sev=1</cmdline>
    </os>
    <launchSecurity type='sev-snp' kernelHashes='yes'>
        <cbitpos>51</cbitpos>
        <reducedPhysBits>1</reducedPhysBits>
        <policy>30000</policy>
    </launchSecurity>
    <memoryBacking>
        <source type="memfd"/>
        <access mode="shared"/>
        <allocation mode="ondemand"/>
    </memoryBacking>
    <features>
        <acpi/>
        <apic/>
    </features>
    <clock offset='utc'>
        <timer name='rtc' tickpolicy='catchup'/>
        <timer name='pit' tickpolicy='delay'/>
        <timer name='hpet' present='no'/>
    </clock>
    <on_poweroff>restart</on_poweroff>
    <on_reboot>restart</on_reboot>
    <on_crash>restart</on_crash>
    <pm>
        <susddmpend-to-mem enabled='no'/>
        <suspend-to-disk enabled='no'/>
    </pm>
    <devices>
        <emulator>/usr/bin/qemu-system-x86_64</emulator>
        <disk type='block' device='disk'>
            <driver name='qemu' type='raw' cache='none' discard='unmap'/>
            <source dev='/dev/hostlvm/guestos' index='1'/>
            <backingStore/>
            <target dev='vda' bus='virtio'/>
            <alias name='virtio-disk0'/>
            <address type='pci' domain='0x0000' bus='0x04' slot='0x00' function='0x0'/>
            <boot order='1'/>
<!--            <readonly/>-->
        </disk>
<!--        <disk type='file' device='disk'>-->
<!--            <source file='/run/ic-node/config.img'>-->
<!--                <seclabel type='none'/>-->
<!--            </source>-->
<!--            <target dev='sdb' bus='usb' removable='on'/>-->
<!--        </disk>-->
        <disk type='file' device='disk'>
            <driver name='qemu' type='raw'/>
            <source file='/tmp/guestos_type/upgrade.img'/>
            <target dev='sda' bus='sata'/>
            <boot order='2'/>
        </disk>
<!--        <filesystem type='mount' accessmode='passthrough'>-->
<!--            <driver type='virtiofs'/>-->
<!--            <source dir='/tmp/guestos_upgrade'/>-->
<!--            <target dir='guestos_upgrade'/>-->
<!--        </filesystem>-->
        <controller type='usb' index='0' model='ich9-ehci1'>
            <alias name='usb'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x1d' function='0x7'/>
        </controller>
        <controller type='usb' index='0' model='ich9-uhci1'>
            <alias name='usb'/>
            <master startport='0'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x1d' function='0x0' multifunction='on'/>
        </controller>
        <controller type='usb' index='0' model='ich9-uhci2'>
            <alias name='usb'/>
            <master startport='2'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x1d' function='0x1'/>
        </controller>
        <controller type='usb' index='0' model='ich9-uhci3'>
            <alias name='usb'/>
            <master startport='4'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x1d' function='0x2'/>
        </controller>
        <controller type='sata' index='0'>
            <alias name='ide'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x1f' function='0x2'/>
        </controller>
        <controller type='pci' index='0' model='pcie-root'>
            <alias name='pcie.0'/>
        </controller>
        <controller type='virtio-serial' index='0'>
            <alias name='virtio-serial0'/>
            <address type='pci' domain='0x0000' bus='0x03' slot='0x00' function='0x0'/>
        </controller>
        <controller type='pci' index='1' model='pcie-root-port'>
            <model name='pcie-root-port'/>
            <target chassis='1' port='0x8'/>
            <alias name='pci.1'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x0' multifunction='on'/>
        </controller>
        <controller type='pci' index='2' model='pcie-root-port'>
            <model name='pcie-root-port'/>
            <target chassis='2' port='0x9'/>
            <alias name='pci.2'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x1'/>
        </controller>
        <controller type='pci' index='3' model='pcie-root-port'>
            <model name='pcie-root-port'/>
            <target chassis='3' port='0xa'/>
            <alias name='pci.3'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x2'/>
        </controller>
        <controller type='pci' index='4' model='pcie-root-port'>
            <model name='pcie-root-port'/>
            <target chassis='4' port='0xb'/>
            <alias name='pci.4'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x3'/>
        </controller>
        <controller type='pci' index='5' model='pcie-root-port'>
            <model name='pcie-root-port'/>
            <target chassis='5' port='0xc'/>
            <alias name='pci.5'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x4'/>
        </controller>
        <controller type='pci' index='6' model='pcie-root-port'>
            <model name='pcie-root-port'/>
            <target chassis='6' port='0xd'/>
            <alias name='pci.6'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x5'/>
        </controller>
        <controller type='pci' index='7' model='pcie-root-port'>
            <model name='pcie-root-port'/>
            <target chassis='7' port='0xe'/>
            <alias name='pci.7'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x6'/>
        </controller>
        <interface type='bridge'>
<!--            <mac address='{{ mac_address }}'/>-->
            <mac address='6a:03:95:d7:d4:75'/>
            <source bridge='br6'/>
            <target dev='vnet1'/>
            <model type='virtio'/>
            <alias name='net0'/>
            <address type='pci' domain='0x0000' bus='0x01' slot='0x00' function='0x0'/>
        </interface>
        <serial type='pty'>
            <source path='/dev/pts/3'/>
            <target type='isa-serial' port='0'>
                <model name='isa-serial'/>
            </target>
            <alias name='serial0'/>
            <log file='/var/log/libvirt/qemu/guestos-upgrader-serial.log' append='off'/>
        </serial>
        <console type='pty' tty='/dev/pts/3'>
            <source path='/dev/pts/3'/>
            <target type='serial' port='0'/>
            <alias name='serial0'/>
        </console>
        <console type='pty' tty='/dev/pts/4'>
            <source path='/dev/pts/4'/>
            <target type='virtio' port='0'/>
            <alias name='console1'/>
        </console>
        <channel type='unix'>
            <source mode='bind' path='/var/lib/libvirt/qemu/channel/target/domain-1-ic/org.qemu.guest_agent.0'/>
            <target type='virtio' name='org.qemu.guest_agent.0' state='connected'/>
            <alias name='channel0'/>
            <address type='virtio-serial' controller='0' bus='0' port='1'/>
        </channel>
        <vsock model='virtio'>
            <cid auto='yes'/>
        </vsock>
        <input type='mouse' bus='ps2'>
            <alias name='input0'/>
        </input>
        <input type='keyboard' bus='ps2'>
            <alias name='input1'/>
        </input>
        <memballoon model='virtio'>
            <alias name='balloon0'/>
            <address type='pci' domain='0x0000' bus='0x05' slot='0x00' function='0x0'/>
        </memballoon>
        <rng model='virtio'>
            <backend model='random'>/dev/urandom</backend>
            <alias name='rng0'/>
            <address type='pci' domain='0x0000' bus='0x06' slot='0x00' function='0x0'/>
        </rng>
    </devices>
    <seclabel type='dynamic' model='dac' relabel='yes'>
        <label>+64055:+108</label>
        <imagelabel>+64055:+108</imagelabel>
    </seclabel>
</domain>
