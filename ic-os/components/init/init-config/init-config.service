[Unit]
Description=Initialize IC node configuration
DefaultDependencies=no
After=mount-config.service
Requires=mount-config.service
RequiresMountsFor=/mnt/config

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/opt/ic/bin/init-config.sh
Restart=on-failure
RestartSec=10

# All guestos services that networking depends on log their outputs to the
# console to be piped to the host terminal if the verbose flag is enabled.
StandardOutput=journal+console
StandardError=journal+console
