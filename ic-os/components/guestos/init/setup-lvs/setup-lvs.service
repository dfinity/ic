[Unit]
Description=Set up logical volumes on first boot
DefaultDependencies=no
Requires=setup-data-encryption.service
After=setup-data-encryption.service

[Install]
WantedBy=local-fs.target

[Service]
StandardOutput=journal+console
StandardError=journal+console
Type=oneshot
RemainAfterExit=true
ExecStart=/opt/ic/bin/setup-lvs.sh
# Don't run in UpgradeVM
ExecCondition=/bin/bash -c '[[ "$(jq -r ".guest_vm_type" /run/config/config.json)" =~ ^(default|null)$ ]]'
