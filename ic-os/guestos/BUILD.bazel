load("//toolchains/sysimage:toolchain.bzl", "ext4_image")

package(default_visibility = ["__subpackages__"])

exports_files([
    "partitions.csv",
])

ext4_image(
    name = "partition-config.tzst",
    partition_size = "100M",
    tags = ["manual"],
    target_compatible_with = [
        "@platforms//os:linux",
    ],
)

