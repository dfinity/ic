    name = "validate-ic-json5",
    srcs = ["//ic-os/guestos/rootfs:opt/ic/bin/validate-replica-config.sh"],
    args = ["$(execpath //ic-os/guestos/rootfs:opt/ic/share/ic.json5.template)"],
    data = ["//ic-os/guestos/rootfs:opt/ic/share/ic.json5.template"],
    tags = ["manual"],
)

