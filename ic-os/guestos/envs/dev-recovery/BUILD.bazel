load("//ic-os:defs.bzl", "icos_build")
load("//ic-os/guestos:defs.bzl", "image_deps")
load("//publish:defs.bzl", "artifact_bundle")

# The macro contains several targets.
# Check
#       //ic-os/guestos/BUILD.bazel for examples
#    or //ic-os/defs.bzl for the full list of targets.
icos_images = icos_build(
    name = "dev-recovery",
    image_deps_func = image_deps,
    tags = [
        "manual",
        "no-cache",
    ],
    visibility = [
        "//rs:ic-os-pkg",
        "//rs:system-tests-pkg",
    ],
)

artifact_bundle(
    name = "bundle-disk",
    testonly = True,
    inputs = [icos_images.disk_image],
    prefix = "guest-os/disk-img-dev-recovery",
    visibility = [
        "//rs:ic-os-pkg",
    ],
)

artifact_bundle(
    name = "bundle-update",
    testonly = True,
    inputs = [icos_images.update_image],
    prefix = "guest-os/update-img-dev-recovery",
    visibility = [
        "//rs:ic-os-pkg",
    ],
)
